<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/Main"
    android:background="#838383">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sale"
        android:id="@+id/SaleText"
        android:layout_marginTop="67dp"
        android:textSize="60sp"
        android:textColor="#ff9fff80"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/sale_name_field"
        android:width="250dp"
        android:hint="@string/name"
        android:layout_below="@+id/SaleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/sale_price_field"
        android:width="250dp"
        android:hint="@string/price"
        android:clickable="true"
        android:layout_below="@+id/sale_name_field"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/submitButton"
        android:width="120dp"
        android:clickable="true"
        android:onClick="submitPressed"
        android:layout_alignTop="@+id/backButton"
        android:layout_alignRight="@+id/sale_price_field"
        android:layout_alignEnd="@+id/sale_price_field" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:id="@+id/backButton"
        android:width="120dp"
        android:onClick="backPressed"
        android:layout_below="@+id/message"
        android:layout_alignLeft="@+id/sale_location_button"
        android:layout_alignStart="@+id/sale_location_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:width="180dp"
        android:id="@+id/sale_location_button"
        android:layout_below="@+id/sale_price_field"
        android:layout_alignLeft="@+id/sale_price_field"
        android:layout_marginTop="10dp"
        android:text="@string/set_location"
        android:onClick="setLocationPressed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:textSize="30sp"
        android:textColor="#FF0000"
        android:id="@+id/isLocationSet"
        android:layout_toRightOf="@id/sale_location_button"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@id/sale_location_button"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/empty"
        android:id="@+id/message"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        android:layout_below="@+id/sale_location_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp"
        android:text="@string/dollar_sign"
        android:layout_toLeftOf="@id/sale_price_field"
        android:layout_alignTop="@id/sale_price_field"
        />
</RelativeLayout>
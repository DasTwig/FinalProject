<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/Main"
    android:background="#5c5c5c">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/name_field"
        android:width="250dp"
        android:hint="Item Name"
        android:layout_marginBottom="71dp"
        android:layout_above="@+id/item_price_field"
        android:layout_centerHorizontal="true"
        android:inputType="text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/registerButton"
        android:width="120dp"
        android:clickable="true"
        android:onClick="registerPressed"
        android:layout_alignTop="@+id/backButton"
        android:layout_alignRight="@+id/item_price_field"
        android:layout_alignEnd="@+id/item_price_field" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/backButton"
        android:width="120dp"
        android:onClick="backPressed"
        android:layout_marginBottom="73dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/item_price_field"
        android:layout_alignStart="@+id/item_price_field" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:width="250dp"
        android:id="@+id/item_price_field"
        android:hint="Max Item Price"
        android:layout_marginBottom="102dp"
        android:layout_above="@+id/registerButton"
        android:layout_centerHorizontal="true"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Filler Text"
        android:id="@+id/errorMessage"
        android:textColor="#FF0000"
        android:visibility="invisible"
        android:layout_above="@+id/item_price_field"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20dp"
        android:text="$"
        android:layout_toLeftOf="@id/item_price_field"
        android:layout_alignTop="@id/item_price_field"
        />

</RelativeLayout>